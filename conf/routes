# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /               com.hanip.ssr.controllers.Application
#GET      /items                                 @com.hanip.ssr.controllers.ItemController.list
#GET      /item/:id                              ItemController.show(id: Int)
#POST     /item/create                           ItemController.create

#POST     /cart/create                           CartController.create
#GET      /cart/:id                              CartController.show(id : Int)
#POST     /cart/addItem                          CartController.addItem
#POST     /cart/removeItem                       CartController.removeItem
#POST     /cart/useCoupon                        CartController.useCoupon
#GET      /cart/:id/listItems                    CartController.listItems(id: Int)

#GET      /coupons                               CouponController.list